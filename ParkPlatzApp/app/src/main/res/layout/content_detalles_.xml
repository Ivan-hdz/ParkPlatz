<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ucer.parkplatzapp.Detalles_Activity"
    tools:showIn="@layout/activity_detalles_">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:paddingBottom="8dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagen_detalles"
            android:src="@drawable/icon_default_dos"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:id="@+id/scrollView"
            android:focusable="true"
            android:focusableInTouchMode="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/area_contenido"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_alignParentStart="false">


                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="305dp"
                        android:orientation="vertical"
                        android:id="@+id/l1"
                        android:layout_gravity="top"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">


                        <RelativeLayout
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/nombre_detalles"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:paddingBottom="3dp"
                                android:text="Nombre"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:layout_toStartOf="@+id/image_fav" />

                            <ImageView
                                android:id="@+id/image_fav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_no_fav_dos"
                                android:paddingLeft="8dp"
                                android:paddingTop="10dp"
                                android:onClick="click_Fav"
                                android:layout_alignBottom="@+id/nombre_detalles"
                                android:layout_alignParentEnd="true" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/direccion_detalles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:text="Direccion"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                        <TextView
                            android:id="@+id/lugaresT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:text="Total de Lugares"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                        <TextView
                            android:id="@+id/lugaresD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:text="Lugares Disponibles"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

                        <TextView
                            android:id="@+id/tarifa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:text="Tarifa"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                        <TextView
                            android:id="@+id/hMax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:text="Altura Maxima"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                        <TextView
                            android:id="@+id/horario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:text="Horario"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                        <TextView
                            android:id="@+id/descripcion_detalles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:text="Descripcion"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_below="@+id/area_contenido"
                    android:padding="8dp"
                    android:layout_alignParentEnd="true">

                    <Button
                        android:id="@+id/button"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IR"
                        android:textSize="25sp"
                        android:textColor="@color/blanco"
                        android:background="@color/colorPrimary"
                        android:onClick="click_llevame" />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>
